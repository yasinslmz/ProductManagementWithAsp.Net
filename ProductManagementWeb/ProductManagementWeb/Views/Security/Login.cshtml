
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-5">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Login Panel</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control mb-2" placeholder="Email" name="Email" id="Email" />
                    <label for="Password">Password</label>
                    <input type="password" class="form-control mb-2" placeholder="Password" name="Password" id="Password" />
                    <input type="submit" class="btn btn-primary form-control" value="Login" />
                </form>
                <label class="text-danger">@ViewData["Message"]</label>
            </div>
        </div>
    </div>
</div>
